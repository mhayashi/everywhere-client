{
  "name": "Everywhere!",
  "version": "0.0.5",
  "description": "Everywhere! enables you to chat on any web page",
  "browser_action": {
    "default_icon": "img/logo-black.png",
    "default_title": "Everywhere!",
    "popup": "popup.html"
  },
  "background_page": "background.html",
  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "19": "img/logo-black.png",
    "32": "img/logo-black.png",
    "48": "img/logo-black.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*" ,  "https://twitter.com/oauth/authorize"],
      "css": ["css/jquery.qtip.css", "css/dock.css"],
      "js": ["lib/3rdparty/jquery.js", "lib/3rdparty/jquery.qtip.min.js", "lib/utils.js", "lib/dock.js", "lib/oauth_authorizer.js"],
      "run_at": "document_end"
    }
  ],
  "update_url": "http://clients2.google.com/service/update2/crx"
}
