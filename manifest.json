{
  "name": "Everywhere!",
  "version": "0.0.1",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "browser_action": {
    "default_icon": "img/icon19.png",
    "default_title": "Everywhere!",
    "popup": "popup.html"
  },
  "background_page": "background.html",
  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "19": "img/icon19.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*" , "https://*/*"],
      "css": ["css/reset.css", "css/jquery.qtip.css", "css/dock.css"],
      "js": ["lib/3rdparty/jquery.js", "lib/3rdparty/jquery.qtip.min.js", "lib/utils.js", "lib/dock.js", "lib/oauth_authorizer.js"],
      "run_at": "document_end"
    }
  ]
//   "options_page": "options.html",
//   "update_url": "http://clients2.google.com/service/update2/crx"
}
