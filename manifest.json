{
  "name": "Everywhere!",
  "version": "0.0.6",
  "description": "Everywhere! enables you to chat on any web page",
  "browser_action": {
    "default_icon": "img/logo-black.png",
    "default_title": "Everywhere!",
    "popup": "popup.html"
  },
  "background_page": "background.html",
  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "19": "img/logo-black.png",
    "32": "img/logo-black.png",
    "48": "img/logo-black.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*" ,
        "https://twitter.com/oauth/authorize"
      ],
      "css": [
        "css/jquery.qtip.css",
        "css/dock.css"
      ],
      "js": [
        "lib/3rdparty/jquery-1.4.2.min.js",
        "lib/3rdparty/jquery-ui-personalized-1.5.3.min.js",
        "lib/3rdparty/jquery.jeditable.js",
        "lib/3rdparty/json2.js",
        "lib/3rdparty/persist.js",
        "lib/3rdparty/jquery.jeditable.autogrow.js",
        "lib/3rdparty/jquery.autogrow.js",
        "lib/3rdparty/jquery.jeditable.ajaxupload.js",
        "lib/3rdparty/jquery.ajaxfileupload.js",
        "lib/utils.js",
        "lib/dock.js",
        "lib/oauth_authorizer.js",
        "lib/lwe.js",
        "lib/connector.js"
      ],
      "run_at": "document_end"
    }
  ],
  "update_url": "http://clients2.google.com/service/update2/crx"
}
